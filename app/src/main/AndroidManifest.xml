<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 위치 접근 권한 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 카메라 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 사진 접근 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 알림 권한 (선택, Android 13 이상) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 기타 필수 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.A"
        android:usesCleartextTraffic="true">

        <!-- 시작 화면 - PermissionActivity (첫 실행 시점) -->
        <activity
            android:name=".activity.PermissionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 언어 선택 화면 -->
        <activity
            android:name=".activity.LanguageActivity"
            android:exported="false" />

        <!-- 사용자 선택 화면 -->
        <activity
            android:name=".activity.SigninActivity"
            android:exported="false" />

        <!-- 로그인 화면 -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <!-- 회원가입 화면 -->
        <activity
            android:name=".activity.SignupActivity"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <!-- 비밀번호 찾기 화면 -->
        <activity
            android:name=".activity.FindpasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.EmailverificationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ResetpasswordActivity"
            android:exported="false" />

        <!-- 메인 화면 -->
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />

        <!-- 설정 화면-->
        <activity android:name=".activity.SettingActivity" />

    </application>

</manifest>