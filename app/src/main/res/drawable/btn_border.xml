<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 흰색 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리색 연한 회색 -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" />

    <!-- 살짝 둥근 모서리 -->
    <corners android:radius="12dp" />

    <!-- 여백(선 안쪽의 패딩 느낌) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>

