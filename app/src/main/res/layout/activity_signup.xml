<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".activity.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <!-- 뒤로가기 -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="0dp"
            android:text="←"
            android:textColor="#000000"
            android:textSize="21sp" />

        <!-- 왼쪽 공간 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.6" />

        <!-- 회원가입 텍스트 -->
        <TextView
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 이메일 입력 -->
    <TextView
        android:text="이메일"
        android:textSize="20sp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex) email@email.com"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:imeOptions="actionNext"
        android:autofillHints="emailAddress"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="8dp" />

    <!-- 중복확인 버튼 -->

    <!-- 중복확인 상태 표시 -->
    <Button
        android:id="@+id/btnCheckEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_border_black"
        android:padding="12dp"
        android:text="중복확인"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvEmailStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일을 입력하고 중복확인을 눌러주세요"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginBottom="20dp" />

    <!-- 비밀번호 입력 -->
    <TextView
        android:text="비밀번호"
        android:textSize="20sp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPassword"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="10dp" />

    <!-- 비밀번호 확인 -->
    <TextView
        android:text="비밀번호 확인"
        android:textSize="20sp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPasswordConfirm"
        android:hint="비밀번호를 다시 입력하세요"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="10dp" />

    <!-- 비밀번호 일치 상태 표시 -->
    <TextView
        android:id="@+id/tvPasswordStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:layout_marginBottom="30dp" />

    <!-- 가입하기 버튼 -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_border"
        android:padding="10dp"
        android:text="가입하기"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

</LinearLayout>